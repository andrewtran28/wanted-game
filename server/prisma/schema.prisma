generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Leaderboard {
  id        String   @id @default(uuid())
  username  String   @db.VarChar(25)
  level     Int
  score     Int
  createdAt DateTime @default(now())

  @@index([score])
  @@map("leaderboard")
}
